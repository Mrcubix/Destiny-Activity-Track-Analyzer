<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:viewModels="clr-namespace:Tracker.ViewModels"
             xmlns:templates="using:Tracker.Controls.Templates"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="Tracker.Views.SettingsView"
             Foreground="White">

  <Design.DataContext>
    <viewModels:SettingsViewModel />
  </Design.DataContext>

  <StackPanel>
    <TextBlock Text="Settings" FontSize="24" Margin="10" />
    <!-- UX Settings Header -->
    <TextBlock Text="UX Settings" FontSize="16" Margin="10" />
    <Panel>
      <!-- UX Settings Section -->

    </Panel>

    <!-- API Setting Header -->
    <TextBlock Text="API Settings" FontSize="16" Margin="10" />

    <Panel>
        <!-- API Settings Section -->
        <templates:UXSettingsControl />
    </Panel>
    
    <Button Command="{Binding Remote.ShowView}" CommandParameter="MainViewModel" Margin="0,100,0,0" HorizontalAlignment="Center" VerticalAlignment="Center">Go back to Homepage</Button>
  </StackPanel>
</UserControl>
