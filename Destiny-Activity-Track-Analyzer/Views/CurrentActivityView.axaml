<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:viewModels="clr-namespace:Tracker.ViewModels"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="Tracker.Views.CurrentActivityView"
             Foreground="White">
  <Design.DataContext>
    <viewModels:CurrentActivityViewModel />
  </Design.DataContext>

  <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
    <StackPanel IsEnabled="{Binding !Remote.SharedStores.SettingsStore.IsKeySet}">
      <TextBlock Text="This feature requires an API key to be set." />
      <!-- TODO: Create SetupView (see plans for details) -->
      <Button Command="" >Go to Setup</Button>
    </StackPanel>

    <TextBlock Text="{Binding CurrentActivity.DisplayProperties.Name, FallbackValue='Not in Activity'}" IsEnabled="{Binding Remote.SharedStores.SettingsStore.IsKeySet}"/>
  </StackPanel>
</UserControl>
