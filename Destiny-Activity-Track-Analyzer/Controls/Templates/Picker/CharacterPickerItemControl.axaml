<Styles xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:controls="using:Tracker.Controls.Templates.Picker">
  <Design.PreviewWith>
    <controls:CharacterPickerItemControl />
  </Design.PreviewWith>

  <Style Selector="controls|CharacterPickerItemControl">
    <!-- Set Defaults -->
    <Setter Property="Template">
      <ControlTemplate>
        <StackPanel Orientation="Horizontal">
          <Button Command="">
            <Image Source="{Binding Character.Icon}" Width="32" Height="32" />
            <TextBlock Text="{Binding Character.Name}" Margin="10 0 0 0" />
          </Button>
        </StackPanel>
      </ControlTemplate>
    </Setter>
  </Style>
</Styles>
